{
  "name": "mathieulalonde.com",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "import_posts": "node public/import_posts.cjs",
    "postcss:run": "postcss src/style.css -d dist public",
    "postcss:watch": "postcss src/style.css -d dist public --watch",
    "postcss:build": "postcss dist/**/*.css -d dist",
    "purgecss": "purgecss --css dist/**/*.css --content dist/**/*.!(css) --output dist/test",
    "watchsass": "sass --watch src/sass:dist/css"
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "bootstrap": "^5.3.7",
    "markdown-to-jsx": "^7.7.13",
    "normalize.css": "^8.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.0",
    "react-slugify": "^5.0.0",
    "react-syntax-highlighter": "^15.6.1",
    "sass": "^1.90.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.2"
  }
}
