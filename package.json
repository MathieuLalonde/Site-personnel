{
  "name": "mathieulalonde.com",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "import_posts": "node public/import_posts.cjs",
    "postcss:run": "postcss src/style.css -d dist public",
    "postcss:watch": "postcss src/style.css -d dist public --watch",
    "postcss:build": "postcss dist/**/*.css -d dist",
    "purgecss": "purgecss --css dist/**/*.css --content dist/**/*.!(css) --output dist/test",
    "watchsass": "sass --watch src/sass:dist/css"
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "bootstrap": "^5.3.3",
    "markdown-to-jsx": "^7.4.7",
    "normalize.css": "^8.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.2.1",
    "react-router-dom": "^6.23.1",
    "react-slugify": "^3.0.3",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-highlight": "^7.0.0",
    "sass": "^1.77.2",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.1",
    "eslint": "^9.3.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.11"
  }
}
